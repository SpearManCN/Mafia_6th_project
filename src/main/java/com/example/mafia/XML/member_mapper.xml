<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.mafia.Repository.MemberRepository">

    <select id="getMemberById" parameterType="com.example.mafia.Domain.Member" resultType="com.example.mafia.Domain.Member">
        select * from member where id = #{id}
    </select>
    <select id="getMemberByNick" parameterType="com.example.mafia.Domain.Member" resultType="com.example.mafia.Domain.Member">
        select * from member where nick = #{nick}
    </select>

    <select id="getMemberByPw" parameterType="com.example.mafia.Domain.Member" resultType="com.example.mafia.Domain.Member">
        select * from member where id = #{id} and pw = #{pw}
    </select>

    <select id="getMembers" resultType="com.example.mafia.Domain.Member">
        select * from member order by score asc;
    </select>

    <insert id="insertMember" parameterType="com.example.mafia.Domain.Member">
        insert into member(id, pw, nick)
        values (#{id},#{pw},#{nick})
    </insert>

    <update id="updateWinScore" parameterType="com.example.mafia.Domain.Member">
        update member win=win+1, score=score+10 where id=#{id}
    </update>

    <update id="updateLossScore" parameterType="com.example.mafia.Domain.Member">
        update member loss=loss+1, score=score-10 where id=#{id}
    </update>

    <update id="updatePw">
        update member pw=#{pw} where id=#{id}
    </update>

    <select id="getRanking" resultType="com.example.mafia.Domain.Member">
        select * from member order by score desc limit 10;
    </select>

    <select id="getMyRanking" parameterType="com.example.mafia.Domain.Member" resultType="Integer">
        select count(*)+1 from member where score>(select score from member where id=#{id})
    </select>
</mapper>